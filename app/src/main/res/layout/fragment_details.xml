<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/mainView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="@color/black"
            tools:text="Бегущий в лабиринте" />


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/detailsFragmentImageView"
                android:layout_width="200dp"
                android:layout_height="301dp"
                android:layout_gravity="start"
                tools:src="@drawable/empty" />

            <LinearLayout
                android:layout_width="166dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"

                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewReleaseDate"
                    style="@style/styleForDetailFragmentTextDescription"
                    tools:text="2021" />

                <TextView
                    android:id="@+id/textViewOriginCountry"
                    style="@style/styleForDetailFragmentTextDescription"
                    tools:text="USA" />

                <TextView
                    android:id="@+id/textViewGenre"
                    style="@style/styleForDetailFragmentTextDescription"
                    tools:text="Драмма" />

                <TextView
                    android:id="@+id/textViewAverage"
                    style="@style/styleForDetailFragmentTextDescription"
                    app:drawableStartCompat="@drawable/ic_rating_star"
                    tools:text="8.8" />

                <TextView
                    android:id="@+id/textViewRuntime"
                    style="@style/styleForDetailFragmentTextDescription"
                    tools:text="2.40" />

                <TextView
                    android:id="@+id/textViewCompany"
                    style="@style/styleForDetailFragmentTextDescription"
                    tools:text="20th Century Fox" />

                <TextView
                    android:id="@+id/textViewRevenue"
                    style="@style/styleForDetailFragmentTextDescription"
                    tools:text="80 000 000 $" />

                <TextView
                    android:id="@+id/textViewBudget"
                    style="@style/styleForDetailFragmentTextDescription"
                    tools:text="80 000 000 $" />


            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/detailsFragmentSendNote"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:text="@string/send_note"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/saveFilm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:button="@drawable/checkbox_selector"
                    android:paddingLeft="10dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center" />

            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">

                <TextView
                    android:id="@+id/detailsFragmentDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    tools:text="Описание" />
            </ScrollView>

        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/loadingLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        tools:visibility="invisible">

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

    </FrameLayout>
</LinearLayout>