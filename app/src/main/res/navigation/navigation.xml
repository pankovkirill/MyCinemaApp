<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.mycinemaapp.view.main.MainFragment"
        android:label="@string/title_home"
        tools:layout="@layout/main_fragment">
        <action
            android:id="@+id/action_nav_main_to_detailsFragment"
            app:destination="@id/detailsFragment" />

        <action
            android:id="@+id/action_nav_main_to_settingsFragment"
            app:destination="@id/settingsFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_search"
        android:name="com.example.mycinemaapp.view.SearchFragment"
        android:label="@string/title_search"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/navigation_favorite"
        android:name="com.example.mycinemaapp.view.FavoriteFragment"
        android:label="@string/title_favorite"
        tools:layout="@layout/fragment_favorite" />

    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.example.mycinemaapp.view.details.DetailsFragment"
        tools:layout="@layout/fragment_details" />

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.mycinemaapp.view.details.DetailsFragment"
        android:label="@string/title_favorite"
        tools:layout="@layout/fragment_settings" />
</navigation>